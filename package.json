{
  "private": true,
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx, json}": [
      "eslint --no-warn-ignored --max-warnings 5 ."
    ],
    "*.css": "stylelint"
  },
  "workspaces": [
    "src/app",
    "src/domain",
    "src/infrastructure/platforms/next"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "cm": "git cz",
    "cm:retry": "git cz --retry",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:js": "eslint .",
    "lint:types": "tsc --noEmit -p tsconfig.json",
    "lint": "npm run lint:css && npm run lint:js",
    "reinstall": "npm run clean && npm install",
    "rebuild": "npm run clean && npm install && npm run build",
    "prepare": "husky",
    "precommit": "npx lint-staged",
    "prepush": "npm run lint:types && npm run test:unit && npm run build",
    "prettier": "npx prettier . --write --ignore-unknown",
    "postmerge": "npm install",
    "postrewrite": "npm install",
    "test:unit": "npm run lint:types && npm run lint && npm run test",
    "test": "jest"
  },
  "dependencies": {
    "@testing-library/react": "^16.0.1",
    "commitizen": "^4.3.1",
    "cypress": "^13.15.1",
    "exhaustive": "^1.1.2",
    "next": "^15.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.7",
    "@babel/preset-react": "^7.25.7",
    "@babel/preset-typescript": "^7.25.7",
    "@eslint/js": "^9.11.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@types/jest": "^29.5.13",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "git-cz": "^4.9.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "react-test-renderer": "^18.3.1",
    "stylelint": "^16.9.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0"
  }
}
