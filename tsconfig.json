{
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@triumph-motorcycles/application/repositories": [
        "src/application/repositories"
      ],
      "@triumph-motorcycles/application/responses": [
        "src/application/responses"
      ],
      "@triumph-motorcycles/application/services": ["src/application/services"],
      "@triumph-motorcycles/application/usecases": ["src/application/usecases"],
      "@triumph-motorcycles/domain/entities": ["src/domain/entities"],
      "@triumph-motorcycles/domain/errors": ["src/domain/errors"],
      "@triumph-motorcycles/domain/types": ["src/domain/types"],
      "@triumph-motorcycles/domain/values": ["src/domain/values"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./build",
    "**/build",
    "build/",
    "cypress.config.ts",
    "cypress/*",
    "dist",
    "**/*spec.ts",
    "./src/infrastructure/next"
  ]
}
